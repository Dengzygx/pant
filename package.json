{
  "name": "pant",
  "version": "0.0.2",
  "description": "Mobile UI Components built on Preact",
  "keywords": [
    "preact",
    "ui"
  ],
  "author": "Gary Wang",
  "license": "MIT",
  "homepage": "https://github.com/webyom/pant",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/webyom/pant.git"
  },
  "bugs": {
    "url": "https://github.com/webyom/pant/issues"
  },
  "main": "lib/index.js",
  "module": "es/index.js",
  "scripts": {
    "build:lib": "tsc -d -m commonjs --outDir lib",
    "build:es": "tsc -d -m esNext --outDir es",
    "build": "rm -rf lib es && npm run build:lib && npm run build:es && npm run scss",
    "scss": "gulp scss && node-sass src --output lib && node-sass src --output es",
    "tsc-check": "tsc --outDir .tsc-check/",
    "eslint": "eslint src/*.ts src/**/*.ts",
    "eslint:fix": "eslint src/*.ts src/**/*.ts --fix",
    "stylelint": "stylelint src/**/*.scss",
    "stylelint:fix": "stylelint src/**/*.scss --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run eslint && npm run stylelint && npm run tsc-check"
    }
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.5.0",
    "@typescript-eslint/parser": "^2.5.0",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.17.0",
    "gulp": "^3.9.0",
    "husky": "^3.0.9",
    "node-sass": "^4.13.1",
    "preact": "^10.3.2",
    "prettier": "^1.19.1",
    "require-all": "^2.0.0",
    "run-sequence": "^1.1.5",
    "stylelint": "^12.0.1",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-scss": "^3.13.0",
    "typescript": "^3.6.4"
  },
  "peerDependencies": {
    "preact": ">=10.2.1"
  }
}
