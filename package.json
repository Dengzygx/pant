{
  "name": "pant",
  "version": "0.1.3",
  "description": "Mobile UI Components built on Preact, Ported from Vant",
  "keywords": [
    "preact",
    "ui",
    "vant"
  ],
  "author": "Gary Wang",
  "license": "MIT",
  "homepage": "https://github.com/webyom/pant",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/webyom/pant.git"
  },
  "bugs": {
    "url": "https://github.com/webyom/pant/issues"
  },
  "main": "lib/index.js",
  "module": "es/index.js",
  "scripts": {
    "build:lib": "tsc -d -m commonjs --outDir lib --sourceMap false --inlineSources false",
    "build:es": "tsc -d -m esNext --outDir es --sourceMap false --inlineSources false",
    "build:clean": "rm -rf lib/_site es/_site",
    "build": "rm -rf lib es && npm run build:lib && npm run build:es && npm run scss && npm run build:clean",
    "start": "webpack-dev-server",
    "deploy": "NODE_ENV=production webpack && gh-pages -d dist",
    "scss": "gulp scss && node-sass src --output lib && node-sass src --output es",
    "tsc-check": "tsc --outDir .tsc-check/",
    "eslint": "eslint --ext ts,tsx src",
    "eslint:fix": "eslint --ext ts,tsx src --fix",
    "stylelint": "stylelint src/**/*.scss",
    "stylelint:fix": "stylelint src/**/*.scss --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run eslint && npm run stylelint && npm run tsc-check"
    }
  },
  "devDependencies": {
    "@types/history": "^4.7.5",
    "@typescript-eslint/eslint-plugin": "^2.5.0",
    "@typescript-eslint/parser": "^2.5.0",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^3.4.2",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.17.0",
    "file-loader": "^5.1.0",
    "gh-pages": "^2.2.0",
    "gulp": "^4.0.2",
    "history": "^4.10.1",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^3.0.9",
    "node-sass": "^4.13.1",
    "preact": "^10.3.2",
    "preact-router": "^3.2.1",
    "prettier": "^1.19.1",
    "require-all": "^2.0.0",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.1.3",
    "stylelint": "^12.0.1",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-scss": "^3.13.0",
    "ts-loader": "^6.2.1",
    "typescript": "^3.6.4",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  },
  "peerDependencies": {
    "preact": ">=10.2.1"
  },
  "dependencies": {
    "clsx": "^1.1.0"
  }
}
